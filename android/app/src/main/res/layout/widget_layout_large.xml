<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header / Logo -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/launcher_icon"
            android:contentDescription="Icon" />
            
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="FişMatik Finans"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp" />
            
        <TextView 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
            
        <TextView
             android:id="@+id/tv_date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Bugün"
             android:textSize="10sp"
             android:textColor="#eeeeee"/>
    </LinearLayout>

    <!-- Divider -->
    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harcama"
                android:textColor="#e0e0e0"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_total_spending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺0,00"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalan"
                android:textColor="#e0e0e0"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_remaining_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₺0,00"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/pb_budget"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/content_layout"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="0" />
        
    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb_budget"
        android:layout_marginTop="2dp"
        android:text="%0 Kullanıldı"
        android:textColor="#cccccc"
        android:textSize="10sp"
        android:gravity="end"/>

    <!-- Quick Action -->
    <LinearLayout
        android:id="@+id/btn_quick_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_percent"
        android:layout_marginTop="8dp"
        android:background="@drawable/widget_button_bg"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingVertical="6dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Hızlı Tarama"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
